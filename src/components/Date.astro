---
interface Props {
    date: Date;
}

const { date } = Astro.props;
---
<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "short",
            day: "numeric"
        })
    }
</time>

<style>
    time {
        color: var(--surface-2);
        font-size: 0.85em;
    }
</style>